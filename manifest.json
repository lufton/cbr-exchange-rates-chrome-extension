{
    "manifest_version": 3,
    "name": "Курс USD-RUB",
    "description": "Курс обмена USD-RUB с сайта ЦБ РФ",
    "version": "1.0",
    "action": {
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "offscreen",
        "storage"
    ],
    "host_permissions": [
        "https://www.cbr.ru/scripts/*"
    ],
    "web_accessible_resources": [{
        "resources": [ "config.json" ],
        "use_dynamic_url": true
    }]
}
